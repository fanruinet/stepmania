# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cmake]
indent_size = 2
indent_style = space

[*.txt]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[configure.ac]
end_of_line = lf
